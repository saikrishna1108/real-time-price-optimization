{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "lib",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "removeComments": true,
    "sourceMap": false,
    "moduleResolution": "node"
  },
  "include": [
    "lib/**/*.ts",
    "bin/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib/**/*.test.ts"
  ]
} 